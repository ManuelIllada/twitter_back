<!DOCTYPE html>
<html>
  <head>
    <%- include("../partials/meta") %>
    <title>Follows</title>
  </head>

  <body>
    <div class="container">
      <div class="row ms-5">
        <%- include("../partials/navbar.ejs")%>
        <%- include("../partials/log-out-modal.ejs")%>
        <div class="col-11 col-lg-7">
          <div class="d-flex mb-4 mt-1">
            <div class="pt-3 me-3">
              <a style="text-decoration: none; color: black" href="/usuarios/perfil">ðŸ¡¨</a>
            </div>
            <div>
              <h1 class="m-0"><%=user.firstname + " " + user.lastname%></h1>
              <small class="opacity-75" style="color: #000000;
              font-family: Arial, Helvetica, sans-serif;">@<%=user.username%></small>
            </div>
          </div>
          <div class="">
            <div class="text-center d-flex border-bottom" id="tablist-header">
              <a
                class=" list-group-item-action text-decoration-none"
                id="list-home-list"
                href="/usuarios/follower"
                aria-controls="list-home"
                ><h3>Followers</h3></a
              >
              <a
                class="active list-group-item-action text-decoration-none"
                id="list-profile-list"
                data-bs-toggle="list"
                href="/usuarios/following"
                role="tab"
                aria-controls="list-profile"
                ><h3>Following</h3></a
              >
            </div>
            <div>
              <div class="tab-content" id="nav-tabContent">
                <div
                  class="tab-pane fade show active"
                  id="list-profile"
                  role="tabpanel"
                  aria-labelledby="list-profile-list"
                >
                  <% for (let follows of user.following) {%>
                  <div class="p-3 d-flex">
                    <img
                      class="me-3"
                      style="width: 50px; height: 50px; border-radius: 100%"
                      src="/img/<%=follows.image%>"
                      alt=""
                    />

                    <div>
                      <div class="m-0 fw-bold"><%=follows.firstname + " " + follows.lastname%></div>
                      <small class="opacity-75" style="color: #000000;
                      font-family: Arial, Helvetica, sans-serif;">@<%=follows.username%></small>
                    </div>
                    <div class="ms-auto pt-3">
                      <a
                        href="/usuarios/follows/delete/<%=follows.id%>"
                        type="submit"
                        class="btn btn-light rounded-pill"
                        >Following</a
                      >
                    </div>
                  </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <%- include("../partials/cards") %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
